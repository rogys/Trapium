                </nav>
            </div>
        </header>
        <main class="main">
            <div class="left_content">
                <div class="menssage">
                    <% data.forEach(e => { %>
                        <h4 class="title_text"><%= e.email %></h4><span class="date">Date: <%= e.created_at %></span>
                        <p class="text"><%= e.text %></p>
                    <% }) %>
                </div>
            </div>
            <aside class="aside">
                <form class="form full_height" action="/" method="POST">
                    <h1 class="title_form">Mandar:</h1>
                    <label class="label_form" for="text">mensagem!</label>
                    <input type="text" placeholder="escreva aqui..." required name="text" id="text">
